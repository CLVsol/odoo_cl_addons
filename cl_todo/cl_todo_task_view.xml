<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_tree_cl_todo_task" model="ir.ui.view">
            <field name="name">cl_todo_task.tree</field>
            <field name="model">cl_todo_task</field>
            <field name="arch" type="xml">
                <tree colors="gray:is_done==True">
                    <field name="name"/>
                    <field name="is_done"/>
                </tree>
            </field>
        </record>

        <record id="view_form_cl_todo_task" model="ir.ui.view">
            <field name="name">cl_todo_task.form</field>
            <field name="model">cl_todo_task</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_toggle_done" type="object" string="Toggle Done" class="oe_highlight"/>
                        <button name="do_clear_done" type="object" string="Clear All Done"/>
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                            </group>
                            <group name="group_right">
                                <field name="is_done"/>
                                <field name="active" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_filter_cl_todo_task" model="ir.ui.view">
            <field name="name">cl_todo_task.search</field>
            <field name="model">cl_todo_task</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Not Done" domain="[('is_done','=',False)]"/>
                    <filter string="Done" domain="[('is_done','!=',False)]"/>
                </search>
            </field>
        </record>

        <act_window id="action_cl_todo_task"
            name="To-do Task"
            res_model="cl_todo_task"
            view_mode="tree,form"/>

    </data>
</openerp>
