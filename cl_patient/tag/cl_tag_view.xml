<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_cl_patient_tree_cl_tag" model="ir.ui.view">
            <field name="name">cl_patient.tree</field>
            <field name="model">cl_patient</field>
            <field name="inherit_id" ref="view_cl_patient_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="patient_code" position="before">
                    <field name="tag_ids" groups="cl_base.group_tag_user"/>
                </field>
            </field>
        </record>

        <record id="view_cl_patient_form_cl_tag" model="ir.ui.view">
            <field name="name">cl_patient.form</field>
            <field name="model">cl_patient</field>
            <field name="inherit_id" ref="view_cl_patient_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <label for="person" position="before">
                    <label for="tag_ids"  groups="cl_base.group_tag_user" class="oe_edit_only"/>
                    <h2>
                        <field name="tag_ids" widget="many2many_tags" patientholder="Tags..." groups="cl_base.group_tag_user"/>
                    </h2>
                </label>
            </field>
        </record>

        <record id="view_cl_patient_search_cl_tag" model="ir.ui.view">
            <field name="name">cl_patient.search</field>
            <field name="model">cl_patient</field>
            <field name="inherit_id" ref="view_cl_patient_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="patient_code" position="after">
                    <field name="tag_ids" />
                </field>
            </field>
        </record>

        <record id="view_cl_tag_form" model="ir.ui.view">
            <field name="name">cl_tag.form</field>
            <field name="model">cl_tag</field>
            <field name="inherit_id" ref="cl_tag.view_cl_tag_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Tag for" position="inside">
                    <group string="Patients">
                        <field name="patient_ids" colspan="4" nolabel="1" />
                    </group>
                </page>
            </field>
        </record>

    </data>
</openerp>
