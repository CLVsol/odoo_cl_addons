<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_cl_medicament_form_tree" model="ir.ui.view">
            <field name="name">cl_medicament.form.tree</field>
            <field name="model">cl_medicament.form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Medicament Form">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        
        <record id="view_cl_medicament_form_form" model="ir.ui.view">
            <field name="name">cl_medicament.form.form</field>
            <field name="model">cl_medicament.form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Medicament Form" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="Medicament Form..."/>
                                <field name="code" placeholder="Form Code..."/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="cl_base.group_base_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_cl_medicament_form_search" model="ir.ui.view">
            <field name="name">cl_medicament.form.search</field>
            <field name="model">cl_medicament.form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Medicament Form">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_cl_medicament_form_view">
            <field name="name">Medicament Form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cl_medicament.form</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_cl_medicament_form_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_cl_medicament_form_view_form">
            <field name="act_window_id" ref="act_open_cl_medicament_form_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_cl_medicament_form_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_cl_medicament_form_view_tree">
            <field name="act_window_id" ref="act_open_cl_medicament_form_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_cl_medicament_form_tree"/>
        </record>

    </data>
</openerp>
